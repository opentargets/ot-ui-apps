{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.js",
      "**/*.jsx",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      "**/*.gql",
      "**/*.graphql",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.next",
      "!**/coverage",
      "!**/*.d.ts",
      "!**/generated",
      "!**/apps/platform/src",
      "!**/packages/ui/src/components",
      "!**/packages/ui/src/hooks",
      "!**/packages/ui/src/pages",
      "!**/packages/sections",
      "!**/packages/ot-config",
      "!**/packages/ot-constants",
      "!**/packages/ot-utils"
    ]
  },
  "formatter": {
    "enabled": true,
    "useEditorconfig": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "includes": [
      "**",
      "!**/bundle-genetics",
      "!**/bundle-platform",
      "!**/node_modules",
      "!**/.github",
      "!**/.husky",
      "!**/public",
      "!**/__generated__",
      "!**/packages/tsconfig"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noAccumulatingSpread": "warn"
      },
      "a11y": {
        "useKeyWithClickEvents": "error",
        "useButtonType": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "warn"
      },
      "suspicious": {
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "warn"
      },
      "style": {
        "useTemplate": "error",
        "useConst": "error"
      },
      "complexity": {
        "noForEach": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
