# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, JSON files
[*.{js,jsx,ts,tsx,json,jsonc}]
indent_style = space
indent_size = 2

# GraphQL files
[*.{gql,graphql}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package.json files
[package.json]
indent_style = space
indent_size = 2
