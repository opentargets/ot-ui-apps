{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["bundle-genetics/**", "bundle-platform/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev-test": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev-ppp": {
      "cache": false,
      "persistent": true
    },
    "build-ppp": {
      "dependsOn": ["^build"],
      "outputs": ["bundle-platform/**"]
    }
  }
}
