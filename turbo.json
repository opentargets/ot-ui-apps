{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build-config", "^build"],
      "outputs": ["bundle-platform/**"]
    },
    "build-config": {
      "outputs": ["bundle-platform/**"]
    },
    "lint": {
      "outputs": []
    },
    "prettier:all": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build-config"],
      "cache": false,
      "persistent": true
    },
    "dev-ppp": {
      "cache": false,
      "persistent": true
    },
    "build-ppp": {
      "dependsOn": ["^build"],
      "outputs": ["bundle-platform/**"]
    }
  }
}
