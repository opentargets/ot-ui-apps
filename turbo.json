{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["bundle-platform/**"]
    },
    "lint": {
      "outputs": []
    },
    "generateAPITypes": {
      "outputs": ["src/types/**", "graphql.schema.json"],
      "cache": false
    },
    "dev-test": {
      "cache": false
    },
    "dev-test:smoke": {
      "cache": false
    },
    "test:platform:e2e": {
      "dependsOn": ["^build"]
    },
    "test:platform:e2e:smoke": {
      "dependsOn": ["^build"]
    },
    "prettier:all": {
      "outputs": []
    },
    "prettier:check": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev-ppp": {
      "cache": false,
      "persistent": true
    },
    "build-ppp": {
      "dependsOn": ["^build"],
      "outputs": ["bundle-platform/**"]
    }
  }
}
